    <div class="container">
     <div class="col-md-4 col-md-offset-4">
       <h2 class="form-signin-heading">Create account</h2>
       <%= form_for(@user, :html => {:class => "form-signin"}) do |f| %>

         <p>
           <%= f.text_field :name, class: 'form-control', placeholder: 'Username..' %>
         </p>

         <p>
           <%= f.label :avatar %><br>
           <%= f.file_field :avatar %>
         </p>

         <p>
           <%= f.email_field :email, class: 'form-control', placeholder: 'Email adress..' %>
         </p>

         <p>
           <%= f.password_field :password, class: 'form-control', placeholder: 'Your password..' %>
         </p>

         <p>
           <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Repeat your password..' %>
         </p>

         <%= f.submit "Create account", class: "btn btn-lg btn-primary btn-block" %>
       <% end %>
     </div>
   </div>
