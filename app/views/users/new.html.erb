<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
    <%= form_for(@user) do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :email %><br>
        <%= f.email_field :email %>
      </p>

      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </p>

      <p>
        <%= f.label :password_confirmation, "Confirmation" %><br>
        <%= f.password_field :password_confirmation %>
      </p>

      <p>
        <%= f.label :avatar %><br>
        <%= f.file_field :avatar %>
      </p>

      <p>
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      </p>
    <% end %>
