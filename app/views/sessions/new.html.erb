 <div class="container">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="form-signin-heading">Log in</h2>
    <%= form_for(:session, url: login_path, :html => {:class => "form-signin"}) do |f| %>
      <p>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email adress..' %>
      </p>

      <p>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Your password..' %>
      </p>

      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
  </div>
</div>
