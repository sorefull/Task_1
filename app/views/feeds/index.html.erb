<h1>Feed</h1>

<% unless @posts && @posts.count > 0 %><h2>Sorry no posts yet.</h2>
<% else %><table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Title</th>
      <th>Body</th>
      <th>Raiting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.user.name, post.user %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td><%= raiting_of post %></td>
      </tr>
    <% end %>
  </tbody>
</table><% end %>
