<p>
  <strong>Username:</strong>
  <%= link_to @post.user.name, @post.user %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong><br>
  <%= @post.body %>
</p>

<p>
  Got (<%= @post.up_votes.count %>) likes!<br>
  Got (<%= @post.down_votes.count %>) dislikes!<br>

  <% if logged_in? %>
    <% if current_user.voted? @post %>
      <%= link_to 'Unvote!', [@post, meth: :unvote], method: :patch, remote: true, style: 'color:blue;' %>
    <% else %>
      <%= link_to 'Like', [@post, meth: :like], method: :patch, remote: true, style: 'color:blue;' %>
      <%= link_to 'Dislike', [@post, meth: :dislike], method: :patch, remote: true, style: 'color:blue;' %>
  <% end %>
</p>
<% end %>
