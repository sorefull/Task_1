<%= form_for [@post, @comment], remote: true, :html => {:class => "form-horizontal save_comment"} do |f| %>
<div class="row">
  <div class="col-sm-10">
    <%= f.text_area :body, class: 'form-control', placeholder: 'Comment..' %>
  </div>
  <div class="col-sm-2">
    <%= f.submit :Save, class: "btn" %>
  </div>
</div>
<% end %>
<br>
